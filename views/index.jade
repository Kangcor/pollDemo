extends layout

block navbar
	nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
		div.navbar-header
			a.navbar-brand(href='#/polls')= title

block content
	div.container
		div(ng-view)
			h1= title
			p Welcome to #{title}

block js
	script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js')
	script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular-resource.min.js')
	script(src='/socket.io/socket.io.js')
	script(src='javascripts/app.js')
	script(src='javascripts/controllers.js')
	script(src='/javascripts/services.js')